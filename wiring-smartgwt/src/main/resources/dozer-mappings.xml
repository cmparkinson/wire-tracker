<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping>
        <class-a>ca.parkie.wiring.entity.Item</class-a>
        <class-b>ca.parkie.wiring.dto.server.ItemDTO</class-b>
        <field>
            <a is-accessible="true">itemId</a>
            <b is-accessible="true">itemId</b>
        </field>
		<field>
			<a is-accessible="true">version</a>
			<b is-accessible="true">version</b>
		</field>
        <field type="one-way" custom-converter-id="itemTypeConverter">
            <a>itemType</a>
            <b>type</b>
        </field>
    </mapping>
    
</mappings>
